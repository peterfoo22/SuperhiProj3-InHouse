{% if label == blank %}
  {% assign label = 'search.form.label' | t %}
{% endif %}

<form action="/search" method="get" role="search">
    <label for= "">{{label}}</label>
    <input id = "search-term" type="search" class = "js-search-input" name="q" value="{{ search.terms | escape }}" placeholder =
    "{{'search.form.placeholder' | t }}">
    <button class = "js-search-submit" type="submit" {% if search.terms == blank %} disabled {% endif %} >{{'search.form.submit' | t }}</button>
</form>
