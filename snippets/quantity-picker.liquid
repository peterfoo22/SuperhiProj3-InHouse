{% if value == blank %}
  {% assign value = 1 %}
{% endif %}

<div class="quantity-picker js-quantity-picker">
  <label class = "option-title" form ="{{id}}" for="Quantity">Quantity</label>

  <div class="option-fieldset">

  <div class="visually-hidden">
    <input type="number" id="Quantity" id="{{id}}" class = "js-quantity-field" name="{{name}}" value="{{value}}" {% if min != blank %}
      min="{{min}}" {% endif %}  {% if max != blank %} max="{{max}}" {% endif %}>
  </div>


    <button class="quantity-button js-quantity-button minus" type="button" {% if value == min %} disabled {% endif %} >
      &ndash;
    </button>

    <span class = "quantity-text js-quantity-text">
      1
    </span>

    <button class="quantity-button js-quantity-button plus" type="button"
    {% if value == max %}
      disabled
    {% endif %}>
     +
    </button>
  </div>
</div>
